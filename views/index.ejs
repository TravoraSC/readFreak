  <!-- About Section Start -->
  <!-- About Section End -->

  <!-- Services Section Start -->
  <!-- Services Section End -->

  <!-- Resume Section Start -->
  <div id="resume" class="section-padding">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
          <div class="education wow fadeInRight" data-wow-delay="0.3s">
            <ul class="bookList">
              <h2 class="timelin-title">Books</h2>
              <% for(let i=0; i<books.length; i++) {%>
                <li class="books">
                  <div class="content-text <%= books[i].favorited ? 'pink' : '' %>"">
                    <h3 class=" line-title title">
                    <%= books[i].title %>
                      </h3>
                      <span class="edit">
                        <%= books[i].edit %>
                      </span>
                      <span class="remove">
                        <%= books[i].remove %>
                      </span>
                      <span><i class="fa-solid fa-user-pen" aria-hidden="true"></i></span>
                      <span><i class="fa-solid fa-trash" aria-hidden="true"></i></span>
                      <span class="author">
                        <%= books[i].author %>
                      </span>
                      <span class="genre">
                        <%= books[i].genre %>
                      </span>
                      <span class="numOfPages">
                        <%= books[i].numOfPages %>
                      </span>
                      <span class="startDate">
                        <%= books[i].startDate %>
                      </span>
                      <span class="endDate">
                        <%= books[i].endDate %>
                      </span>
                      <p class="line-text thoughts">
                        <%= books[i].thoughts %>
                      </p>
                      <!-- <% console.log(books[i].endDate) %> -->
                  </div>
                </li>
                <% } %>
          </div>
          </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  </div>
