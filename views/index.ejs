    <!-- Hero Area Start -->
    <div id="hero-area" class="hero-area-bg">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-md-12 col-sm-12 text-center">
            <div class="contents">
              <h5 class="script-font wow fadeInUp" data-wow-delay="0.2s">This is</h5>
              <h2 class="head-title wow fadeInUp" data-wow-delay="0.4s">ReadFreak</h2>
              <p class="script-font wow fadeInUp" data-wow-delay="0.6s">Enter book details</p>
              <form action="/bookshelf" method="post" class="form social-icon wow fadeInUp" data-wow-delay="0.8s">
                <div class="formDiv">
                  <div>
                    <label for="title">Title:</label>
                    <input type="text" name="title"><br><br>
                    <label for="author">Author:</label>
                    <input type="text" name="author"><br><br>
                  </div>

                  <div>
                    <label for="genre">Genre:</label>
                    <input type="text" name="genre"><br><br>

                    <label for="numOfPages"># of pages:</label>
                    <input type="number" name="numOfPages"><br><br>
                  </div>

                  <div>
                    <label for="startDate">Started:</label>
                    <input type="date" name="startDate"><br><br>

                    <label for="endDate">Finished:</label>
                    <input type="date" name="endDate"><br><br>
                  </div>
                  <div>
                    <label for="thoughts" class="thoughts">Thoughts:</label>
                    <textarea class="thoughtBlock" name="thoughts"></textarea>

                    <input type="submit" class="header-button btn btn-common wow fadeInUp" data-wow-delay="1s"
                      value="Shelve">
                  </div>
                </div>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    </div>
    </div>
